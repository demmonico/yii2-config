{
    "name": "demmonico/yii2-config",
    "type": "yii2-extension",
    "description": "Yii2 extension which allows to get application parameters, text or email templates from database tables or from default config, to import and to manage them from admin panel dynamically.",
    "keywords": ["yii", "yii2", "config", "template", "template engine", "email", "mailer", "extension", "component"],
    "homepage": "https://github.com/demmonico/yii2-config",
    "license": "MIT",
    "authors": [
        {"name": "demmonico", "email": "demmonico@gmail.com"}
    ],
    "require": {
        "php": ">5.5.0",
        "yiisoft/yii2": "^2.0.0",

        "demmonico/yii2-models": "*",
        "demmonico/yii2-helpers": "*",
        "demmonico/reflection": "^2.0.0"
    },
    "autoload": {
        "psr-4": {
            "demmonico\\config\\": "src",
            "demmonico\\template\\": "src/template",
            "demmonico\\email\\": "src/email"
        }
    }
}
